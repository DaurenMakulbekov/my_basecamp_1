<div class="col-auto">
  <h1>Projects</h1>
  <br>
</div>

<div class="row justify-content-center">
  <% @projects.each do |project| %>
    <% if project.user == current_user %>
      <div class="col-auto">
        <div class="card text-dark bg-light mb-3" style="width: 18rem;">
          <div class="card-header text-white bg-secondary mb-3">
            <h5><%= project.name %></h5>
          </div>
          <div class="card-body text-dark bg-light mb-3">
              <h5 class="card-title"><% project.name %></h5>
              <h6 class="card-subtitle"></h6>
              <p class="card-text"><%= project.body %></p>
              <a href="#" class="card-link"><%= link_to "Show", project %></a>
              <a href="#" class="card-link"><%= link_to "Edit", edit_project_path(project) %></a>
          </div>
        </div>
      </div>
    <% end %>
  <% end %>
</div>

<div class="col-auto">
  <%= link_to "New Project", new_project_path, class:"btn btn-primary" %>
</div>
